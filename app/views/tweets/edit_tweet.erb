<h1>Hi,<%=Helpers.current_user(session).username%></h1>

<% if flash.has?(:message) %>
<%= flash[:message]%>
<% end %>

<h2>Edit your tweet:</h2>

<form action="/tweets/<%=@tweet.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <h3><input type="text" name="content" id="content" value="<%=@tweet.content%>"></h3>
  <input type="submit" id="submit" name="" value="Edit Tweet">

</form>

<br><br>

<form action="/tweets" method="get">
  <input type="submit" id="submit" value="View All Tweets">
</form>

<form action="/logout" method="get">
  <input type="submit" id="logout" value="Log Out">
</form>
